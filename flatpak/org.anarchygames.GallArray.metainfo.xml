<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.anarchygames.GallArray</id>
  <name>Gall-array</name>
  <summary>Simple minimalist image gallery</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>
      A dark-themed, minimalist image gallery for Linux with three view modes:
    </p>
    <ul>
      <li>Gallery - Navigate images with Previous/Next or arrow keys</li>
      <li>List - Browse files by name, double-click to view</li>
      <li>Grid - Thumbnail view with hover magnification</li>
    </ul>
    <p>
      Features a Recent Folders sidebar for quick access to previously viewed directories.
      Supports JPG, PNG, GIF, BMP, WebP, and TIFF formats.
    </p>
  </description>

  <launchable type="desktop-id">org.anarchygames.GallArray.desktop</launchable>

  <url type="homepage">https://anarchygames.org</url>
  <url type="bugtracker">https://github.com/AnarchySC/galleray/issues</url>
