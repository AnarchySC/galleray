  <url type="vcs-browser">https://github.com/AnarchySC/galleray</url>

  <developer id="org.anarchygames">
    <name>AnarchyGames</name>
  </developer>

  <provides>
    <binary>gall-array</binary>
  </provides>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="1.0.0" date="2026-02-10">
      <description>
        <p>Initial release featuring:</p>
        <ul>
          <li>Three view modes: Gallery, List, and Grid</li>
          <li>Hover magnification in Grid view</li>
          <li>Recent Folders sidebar with history</li>
          <li>Dark minimalist interface</li>
          <li>Keyboard navigation support</li>
        </ul>
